<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="143dp"
        android:background="@drawable/topbar_large_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/navbar"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:background="@drawable/navbar_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <RelativeLayout
        android:id="@+id/explore_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/navbar"
        app:layout_constraintEnd_toStartOf="@+id/calender_nav"
        app:layout_constraintBottom_toBottomOf="@+id/navbar"
        app:layout_constraintTop_toTopOf="@+id/navbar">


        <ImageView
            android:id="@+id/exploreIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/exploreNavText"
            android:layout_alignEnd="@+id/exploreNavText"
            app:srcCompat="@drawable/nav_explore_icon" />

        <TextView
            android:id="@+id/exploreNavText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exploreIcon"
            android:text="Explore"
            android:textColor="@color/colorAccent"
            android:textSize="12dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/calender_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/explore_nav"
        app:layout_constraintEnd_toStartOf="@+id/add_new"
        app:layout_constraintBottom_toBottomOf="@+id/navbar"
        app:layout_constraintTop_toTopOf="@+id/navbar">


        <ImageView
            android:id="@+id/calenderIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/calenderNavText"
            android:layout_alignEnd="@+id/calenderNavText"
            app:srcCompat="@drawable/nav_calender_icon" />

        <TextView
            android:id="@+id/calenderNavText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calenderIcon"
            android:text="Events"
            android:textColor="@color/colorAccent"
            android:textSize="12dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-75dp"
        app:layout_constraintStart_toEndOf="@+id/calender_nav"
        app:layout_constraintEnd_toStartOf="@+id/saved_nav"
        app:layout_constraintBottom_toBottomOf="@+id/navbar"
        app:layout_constraintTop_toTopOf="@+id/navbar">


        <ImageView
            android:id="@+id/addIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/add_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/saved_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/add_new"
        app:layout_constraintEnd_toStartOf="@+id/settings_nav"
        app:layout_constraintBottom_toBottomOf="@+id/navbar"
        app:layout_constraintTop_toTopOf="@+id/navbar">


        <ImageView
            android:id="@+id/savedIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/savedNavText"
            android:layout_alignEnd="@+id/savedNavText"
            app:srcCompat="@drawable/nav_saved_icon" />

        <TextView
            android:id="@+id/savedNavText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/savedIcon"
            android:text="Saved"
            android:textColor="@color/colorAccent"
            android:textSize="12dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/settings_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/saved_nav"
        app:layout_constraintEnd_toEndOf="@+id/navbar"
        app:layout_constraintBottom_toBottomOf="@+id/navbar"
        app:layout_constraintTop_toTopOf="@+id/navbar">


        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/settingsNavText"
            android:layout_alignEnd="@+id/settingsNavText"
            app:srcCompat="@drawable/nav_settings_icon" />

        <TextView
            android:id="@+id/settingsNavText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settingsIcon"
            android:text="Settings"
            android:textColor="@color/colorAccent"
            android:textSize="12dp" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/icon_circle_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notifications_none_icon" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageButton"
        app:srcCompat="@drawable/location_icon" />

    <TextView
        android:id="@+id/usrLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/trip_sans_medium"
        android:text="Colombo, Sri Lanka"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/trip_sans"
        android:text="Current Location"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/usrLocation"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:srcCompat="@drawable/keyboard_arrow_down_icon" />

    <RelativeLayout
        android:id="@+id/search"
        android:layout_width="238dp"
        android:layout_height="35dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/search_bg"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton">


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/search_icon" />

        <EditText
            android:id="@+id/searchInput"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="173dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/imageView7"
            android:autofillHints="username"
            android:fontFamily="@font/trip_sans"
            android:inputType="text"
            android:text="Search"
            android:textAlignment="textStart"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/filter_icon_btn" />
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/filters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/filter1"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/filter_near_me"
                android:button="@null" />

            <RadioButton
                android:id="@+id/filter2"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/filter_sports"
                android:button="@null" />

            <RadioButton
                android:id="@+id/filter3"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/filter_music"
                android:button="@null" />

            <RadioButton
                android:id="@+id/filter4"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/filter_food"
                android:button="@null" />

            <RadioButton
                android:id="@+id/filter5"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/filter_wine_n_dine"
                android:button="@null" />

        </LinearLayout>

    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filters"
        app:layout_constraintBottom_toTopOf="@+id/navbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/trip_sans_medium"
                android:text="Hello Jane"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/subGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/trip_sans"
                android:text="Check out the new events"
                android:textColor="#464646"
                android:textSize="14dp"
                android:layout_below="@+id/greeting" />

            <TextView
                android:id="@+id/heading1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/trip_sans_medium"
                android:text="Happening Today"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_below="@+id/subGreeting" />

            <HorizontalScrollView
                android:id="@+id/scrollView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:scrollbars="none"
                android:layout_below="@+id/heading1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/event1"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:background="@drawable/events_card"
                        app:layout_constraintBottom_toBottomOf="@+id/view"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageButton">

                        <ImageView
                            android:id="@+id/event1Bg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="6dp"
                            app:srcCompat="@drawable/image_1" />

                        <RelativeLayout
                            android:id="@+id/event1Date"
                            android:layout_width="26dp"
                            android:layout_height="32dp"
                            android:layout_alignTop="@+id/event1Bg"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/date_box">

                            <TextView
                                android:id="@+id/event1Day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/trip_sans_medium"
                                android:text="30"
                                android:textAlignment="center"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/event1Month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/trip_sans_medium"
                                android:text="JUL"
                                android:textAlignment="center"
                                android:textSize="12dp" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/event1Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_below="@+id/event1Bg"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:text="Sunfest : Live in concert 2024"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/trip_sans_medium" />

                        <RelativeLayout
                            android:id="@+id/event1Details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/event1Title"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp">

                            <ImageView
                                android:id="@+id/event1UserIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                app:srcCompat="@drawable/people_icon" />

                            <TextView
                                android:id="@+id/event1Capacity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/event1UserIcon"
                                android:text="5000"
                                android:textSize="10dp"
                                android:textColor="@color/black"/>

                            <ImageView
                                android:id="@+id/event1SoldIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@+id/event1Capacity"
                                app:srcCompat="@drawable/done_icon" />

                            <TextView
                                android:id="@+id/event1Sold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/event1SoldIcon"
                                android:text="121"
                                android:textSize="10dp"
                                android:textColor="@color/black"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/event1Location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/event1Details"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp">

                            <ImageView
                                android:id="@+id/event1LocationIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                app:srcCompat="@drawable/location_small_icon" />

                            <TextView
                                android:id="@+id/event1LocationText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/event1LocationIcon"
                                android:text="Galle Face, Colombo, Sri Lanka"
                                android:textSize="10dp"
                                android:textColor="@color/black"/>

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/event1SavedIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/event1Bg"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="11dp"
                            android:layout_marginEnd="11dp"
                            app:srcCompat="@drawable/favorite" />


                    </RelativeLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/heading2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/trip_sans_medium"
                android:text="Upcoming"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_below="@+id/scrollView1" />

            <HorizontalScrollView
                android:id="@+id/scrollView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:scrollbars="none"
                android:layout_below="@+id/heading2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/event2"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:background="@drawable/events_card"
                        app:layout_constraintBottom_toBottomOf="@+id/view"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageButton">

                        <ImageView
                            android:id="@+id/event2Bg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="6dp"
                            app:srcCompat="@drawable/image_1" />

                        <RelativeLayout
                            android:id="@+id/event2Date"
                            android:layout_width="26dp"
                            android:layout_height="32dp"
                            android:layout_alignTop="@+id/event2Bg"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/date_box">

                            <TextView
                                android:id="@+id/event2Day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/trip_sans_medium"
                                android:text="30"
                                android:textAlignment="center"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/event2Month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/trip_sans_medium"
                                android:text="JUL"
                                android:textAlignment="center"
                                android:textSize="12dp" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/event2Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_below="@+id/event2Bg"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:text="Sunfest : Live in concert 2024"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/trip_sans_medium" />

                        <RelativeLayout
                            android:id="@+id/event2Details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/event2Title"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp">

                            <ImageView
                                android:id="@+id/event2UserIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                app:srcCompat="@drawable/people_icon" />

                            <TextView
                                android:id="@+id/event2Capacity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/event2UserIcon"
                                android:text="5000"
                                android:textSize="10dp"
                                android:textColor="@color/black"/>

                            <ImageView
                                android:id="@+id/event2SoldIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@+id/event2Capacity"
                                app:srcCompat="@drawable/done_icon" />

                            <TextView
                                android:id="@+id/event2Sold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/event2SoldIcon"
                                android:text="121"
                                android:textSize="10dp"
                                android:textColor="@color/black"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/event2Location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/event2Details"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp">

                            <ImageView
                                android:id="@+id/event2LocationIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                app:srcCompat="@drawable/location_small_icon" />

                            <TextView
                                android:id="@+id/event2LocationText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/event2LocationIcon"
                                android:text="Galle Face, Colombo, Sri Lanka"
                                android:textSize="10dp"
